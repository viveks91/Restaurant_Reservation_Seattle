<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Reservation" transaction-type="RESOURCE_LOCAL">
	<class>models.Address</class>
	<class>models.Category</class>
	<class>models.Restaurant</class>
	<class>models.Reservation</class>
	<class>models.Person</class>
	<class>models.Reviews</class>
	<class>models.Following</class>
	<class>models.Favorites</class>
	<class>models.User</class>
	<class>models.City</class>
	<class>models.ZIP</class>
	<class>models.State</class>
		<properties>
		    <property name="eclipselink.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/restaurant_reservation"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
